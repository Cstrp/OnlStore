{
  "compilerOptions": {
    "experimentalDecorators": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ESNext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "custom.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}